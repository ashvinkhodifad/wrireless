<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="ebay_user_details_form_view" model="ir.ui.view">
				<field name="name">ebay.user.details.view.form</field>
				<field name="model">res.partner</field>
				<field name="type">form</field>
				<field name="inherit_id" ref="base.view_partner_form"/>
	            <field name="arch" type="xml">
		            <xpath expr="//notebook" position="inside">
		           		<page string="EBay User Details">
							<group>
								<group>
									<field name='ebay_user_id' string="EBay User ID" readonly='1'></field>
									<field name="ebay_user_emaid_id" string="EBay User Email"  readonly='1'/>
								</group>
							</group>
						</page>
					</xpath>
				</field>
		</record>
	</data>
</odoo>